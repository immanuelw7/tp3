import random
jouer = True
nbrdevictoireconsecutif = 0
statut = 'nulle
def combat(level):
    global nbrdevictoire, nbrdevictoireconsecutif, nbrdefaite, statut, nbrdevie
    nbrdevictoire = 0
    nbrdefaite = 0
    forceduhéro = random.randint(1,10) + random.randint(1,10)
    print(f"Voici le resultat de votre lance de dés qui definit votre force à ce moment {forceduhéro}")
    if level < forceduhéro:
            nbrdevie += level
            print(f'ezz dubs, vous avez WIN, votre niveau de vie est {nbrdevie}, vous avez aussi win {nbrdevictoireconsecutif}')








